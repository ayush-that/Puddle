{
  "name": "puddle-piggy-bank",
  "version": "1.0.0",
  "description": "Onchain piggy bank platform for collaborative savings with Privy",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "format": "prettier . --write",
    "format:solidity": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
